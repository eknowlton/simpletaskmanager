{
  "terminal.integrated.fontSize": 10,
  "editor.lineNumbers": "relative",
  "editor.insertSpaces": true,

  "window.zoomLevel": 1,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "editor.minimap.enabled": false,

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  "[ruby]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },

  "editor.acceptSuggestionOnEnter": "off",
  "vim.disableExtension": false,
  "editor.fontFamily": "'Dank Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "workbench.statusBar.visible": true,
  "workbench.panel.defaultLocation": "right",
  "terminal.integrated.lineHeight": 0,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.fontFamily": "MesloLGLDZ Nerd Font",
  "workbench.colorCustomizations": {
    "terminal.foreground": "#fff",
    "terminal.background": "#000"
  },
  "terminal.explorerKind": "external",

  "phpunit.command": "docker exec -t diedumprun-app-1 /bin/sh -c \"${php} ${phpargs} ${phpunit} ${phpunitargs}\"",
  "phpunit.php": "php",
  "phpunit.phpunit": "vendor/bin/pest",
  "phpunit.args": ["-c", "phpunit.xml"],
  "phpunit.paths": {
    "/mnt/storage/@home/ethan/Projects/diedump.run/src": "/var/www/html"
  }
}
